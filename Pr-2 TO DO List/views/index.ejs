<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>

    <!-- INTERNAL PROFESSIONAL UI CSS -->
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 40px 10px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: linear-gradient(135deg, #061752, #023c44);
            color: #1f2933;
        }

        h1 {
            margin-bottom: 24px;
            font-size: 30px;
            letter-spacing: 0.6px;
            color: #dee3ec;
        }

        form table {
            border-collapse: collapse;
            min-width: 380px;
            background: #231e66;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.12);
            margin-bottom: 20px;
        }

        form td {
            padding: 10px 14px;
            font-size: 14px;
            border-bottom: 1px solid #041536;
        }

        form tr:last-child td {
            border-bottom: none;
        }

        form td:first-child {
            background: #155da593;
            font-weight: 600;
            width: 150px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 8px 10px;
            border-radius: 6px;
            border: 1px solid #09213f;
            font-size: 14px;
            outline: none;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        input[type="text"]:focus,
        select:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
        }

        input[type="submit"] {
            padding: 8px 18px;
            border-radius: 999px;
            border: none;
            font-size: 14px;
            cursor: pointer;
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: #ffffff;
            font-weight: 600;
            letter-spacing: 0.3px;
            box-shadow: 0 8px 18px rgba(79, 70, 229, 0.35);
            transition: transform 0.1s ease, box-shadow 0.1s ease, opacity 0.15s ease;
        }

        input[type="submit"]:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 24px rgba(7, 4, 58, 0.45);
        }

        input[type="submit"]:active {
            transform: translateY(0);
            box-shadow: 0 6px 12px rgba(79, 70, 229, 0.35);
            opacity: 0.9;
        }

        hr {
            border: none;
            border-top: 1px solid #e5e7eb;
            margin: 20px 0;
            width: 80%;
        }

        /* LIST TABLE */
        table[border="1"][cellpadding="5px"][cellspacing="0"] {
            border-collapse: collapse;
            width: 90%;
            max-width: 900px;
            background: #8ea9b4;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.12);
        }

        thead {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: #ffffff;
        }

        thead th {
            padding: 10px 12px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.6px;
        }

        tbody td {
            padding: 10px 12px;
            font-size: 14px;
            border-bottom: 1px solid #e5e7eb;
        }

        tbody tr:nth-child(even) {
            background: #1e548b59;
        }

        tbody tr:hover {
            background: #788ea3;
        }

        td:last-child {
            white-space: nowrap;
        }

        button {
            padding: 5px 12px;
            border-radius: 999px;
            border: none;
            font-size: 12px;
            cursor: pointer;
            font-weight: 500;
            letter-spacing: 0.3px;
            margin: 0 2px;
            transition: transform 0.1s ease, box-shadow 0.1s ease, opacity 0.15s ease;
        }

        a {
            text-decoration: none;
        }

        a button:first-child {
            background: #3a6b0c;
            color: #ffffff;
            box-shadow: 0 6px 12px rgba(239, 68, 68, 0.35);
        }

        a + a button {
            background: #0ea5e9;
            color: #ffffff;
            box-shadow: 0 6px 12px rgba(14, 165, 233, 0.35);
        }

        button:hover {
            transform: translateY(-1px);
            opacity: 0.95;
        }

        button:active {
            transform: translateY(0);
            opacity: 0.9;
        }

        @media (max-width: 768px) {
            form table {
                width: 100%;
                min-width: 0;
            }

            table[border="1"][cellpadding="5px"][cellspacing="0"] {
                width: 100%;
            }

            thead {
                font-size: 12px;
            }

            tbody td {
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <center>
        <h1>My To Do List</h1>
        <form action="/add-student" method="post">
            <table border="1" cellpadding="5px" cellspacing="0px">
                <tr>
                    <td>Id</td>
                    <td><input type="text" name="id" required></td>
                </tr>
                <tr>
                    <td>Task Title</td>
                    <td><input type="text" name="title" required></td>
                </tr>

                <tr>
                    <td>Description</td>
                    <td><input type="text" name="description" required></td>
                </tr>

                <tr>
                    <td>Date</td>
                    <td><input type="text" name="date" required></td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>
                        <select name="status" required>
                            <option value="select-Status ">--select-Status--</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>Priority</td>
                    <td>
                        <select name="priority" required>
                            <option value="select-Priority">--select Priority--</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td colspan="2" style="text-align:center;">
                        <input type="submit" name="submit" value="Add">
                    </td>
                </tr>
            </table>
        </form>

        <hr>
        <hr>

        <table border="1" cellpadding="5px" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th> Task Title </th>
                    <th> Description</th>
                    <th>Date </th>
                    <th> Status </th>
                    <th> Priority </th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% tasks.forEach((task)=>{ %>
                    <tr>
                        <td>
                            <%= task.id %>
                        </td>
                        <td>
                            <%= task.title %>
                        </td>
                        <td>
                            <%= task.description %>
                        </td>
                        <td>
                            <%= task.date %>
                        </td>
                        <td>
                            <%= task.status %>
                        </td>
                        <td>
                            <%= task.priority %>
                        </td>
                        <td>
                            <a href="/delet-student/<%= task.id %>">
                                <button>Delete</button>
                            </a>
                            <a href="/edit-student/<%= task.id %>">
                                <button>Edit</button>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </center>
</body>

</html>
